<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mbBookmarkEmptyStarViewId"
        android:visibility="gone"
        tools:visibility="visible"
        android:clickable="true"
        android:padding="@dimen/margin_16"
        android:background="@android:color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbBookmarkEmptyStarImageViewId"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/empty_icon_size"
            android:layout_height="@dimen/empty_icon_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_star_illustration"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mbBookmarkEmptyLabelStarTextViewId"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mbBookmarkEmptyStarImageViewId"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_16"
            android:text="@string/no_bookmark_star_string"
            style="@style/MBMaterialTextSubtitleYellow"
            />

</androidx.constraintlayout.widget.ConstraintLayout>