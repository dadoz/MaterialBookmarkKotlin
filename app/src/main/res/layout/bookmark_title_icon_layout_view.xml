<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mbNewBookmarkIconLayoutId"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:visibility="visible">
    <ProgressBar
            android:id="@+id/mbNewBookmarkTitleLoaderId"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mbNewBookmarkTitleTextViewId"
            android:layout_width="0dp"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mbNewBookmarkIconImageViewId"
            style="@style/MBMaterialTextHeaderBigViolet"
            android:maxLines="5"
            tools:text="Title..."/>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/MBMaterialTextInputOutlinedViolet"
            android:id="@+id/mbNewBookmarkTitleTextInputId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mbNewBookmarkIconImageViewId"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            tools:visibility="gone"
            android:visibility="gone"
            android:hint="Title insert...">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mbNewBookmarkTitleEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                style="@style/MBMaterialTextSubtitleViolet"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbNewBookmarkIconImageViewId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/margin_8"
            android:layout_width="@dimen/bookmark_icon_preview_big_size"
            android:layout_height="@dimen/bookmark_icon_preview_big_size"
            android:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_world_map"/>
</androidx.constraintlayout.widget.ConstraintLayout>