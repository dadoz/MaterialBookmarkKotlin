<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/mbAddBookmarkAppBarLayoutId"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorAccentLight"
                android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/mbToolbarId"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextColor="@color/colorAccent"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
                android:id="@+id/mbNewBookmarkMainViewId"
                android:layout_below="@+id/mbAddBookmarkAppBarLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_16"
                android:orientation="vertical"
                tools:context=".modules.addBookmark.AddBookmarkFragment">
            <RelativeLayout
                    android:id="@+id/mbNewBookmarkSearchIntroViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mbTitleSearchBookmarkTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search \nBookmark"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginRight="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        style="@style/MBMaterialDarkTitleStyle"
                        />
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_below="@+id/mbTitleSearchBookmarkTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="just type a bookmark "
                        style="@style/MBMaterialDarkSubtitleStyle"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginRight="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_16"
                        />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mbsearchBookmarkButtonViewId"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_icon"
                        android:visibility="gone"
                        />
            </RelativeLayout>
            <include layout="@layout/bookmark_title_icon_layout_view"/>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mbNewBookmarkUrlEditCardviewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MBMaterialCardviewStyle"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_16"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/mbNewBookmarkUrlEditTitleId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="24sp"
                            android:fontFamily="@font/yantramanav_thin"
                            android:text="Insert your Bookmark"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/yantramanav_thin"
                            android:hint="...">
                        <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/mbNewBookmarkUrlEditTextId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/yantramanav_thin"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mbNewBookmarkUrlCardviewId"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MBMaterialCardviewStyle"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mbNewBookmarkUrlTextId"
                        android:padding="@dimen/margin_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_toStartOf="@+id/mbNewBookmarkIconImageViewId"
                        android:lines="1"
                        android:textSize="24sp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/yantramanav_thin"
                        tools:text="www.googgle.it "/>
                <ImageView
                        android:id="@+id/mbNewBookmarkIconImageViewId"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/margin_16"
                        android:src="@drawable/ic_bookmark"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>



            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/margin_16"
                    android:background="@color/colorAccentLight"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:id="@+id/mbBookmarkSearchedUrPlaceholderId"
                            android:layout_centerInParent="true"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:src="@drawable/ic_new_bookmark"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:layout_below="@+id/mbBookmarkSearchedUrPlaceholderId"
                            android:layout_marginBottom="@dimen/margin_8"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/yantramanav_light"
                            android:text="Tap to refresh"/>

                    <WebView
                            tools:visibility="gone"
                            android:visibility="gone"
                            android:id="@+id/mbBookmarkSearchedUrlWebViewId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--save with success-->

    <include layout="@layout/add_bookmark_success_view"/>
    <include layout="@layout/add_bookmark_error_view"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>