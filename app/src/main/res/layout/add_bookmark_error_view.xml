<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:visibility="visible"
        android:id="@+id/mbBookmarkSaveNewErrorCardviewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/MBMaterialCardviewStyleRed"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_marginTop="@dimen/margin_8">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_16"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mbBookmarkSaveNewErrorTitleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorError"
                    android:textSize="24sp"
                    android:fontFamily="@font/yantramanav_light"
                    android:text="Saving Bookmark..."
                    tools:text="Android Dev"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mbBookmarkSaveNewErrorMessageId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="18sp"
                    android:fontFamily="@font/yantramanav_light"
                    android:text="Android Dev"
                    tools:text="Saved Bookmark"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
