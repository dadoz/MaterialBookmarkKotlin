<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bookmarkViewModel"
            type="com.application.material.bookmarkswallet.app.viewModels.BookmarkViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbBookmarkPreviewHeaderIconImageViewId"
            android:layout_width="@dimen/bookmark_icon_preview_size"
            android:layout_height="@dimen/bookmark_icon_preview_size"
            android:layout_alignParentStart="true"
            android:tint="?attr/colorPrimary"
            app:iconSrc="@{bookmarkViewModel.bookmarkIconUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_bookmark_light" />

        <LinearLayout
            android:id="@+id/mbBookmarkPreviewHeaderSubtitleLayoutId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mbBookmarkPreviewHeaderIconImageViewId"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mbBookmarkPreviewHeaderTitleTextViewId"
                style="@style/MBMaterialTextTitleThinViolet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="This is a title bala lla aldl llasld llasld lfa alsdk lasdk las dkl asd" />

            <TextView
                android:id="@+id/mbBookmarkPreviewHeaderSubtitleTextViewId"
                style="@style/MBMaterialTextSubtitleSmallYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                tools:text="on Monday 23 at 14:00 slkdflj als kdjlf kajslkdf jalskdj lfkajsdf lkjsdlfk jasldkfj a" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbShareBookmarkActionId"
            android:visibility="gone"
            android:layout_width="@dimen/icon_filter_bookmark"
            android:layout_height="@dimen/icon_filter_bookmark"
            android:layout_margin="@dimen/margin_8"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_share_light"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/mbBookmarkPreviewStarButtonId"
            app:layout_constraintTop_toBottomOf="@+id/mbBookmarkPreviewHeaderSubtitleLayoutId" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbBookmarkPreviewStarButtonId"
            android:layout_width="@dimen/icon_filter_bookmark"
            android:layout_height="@dimen/icon_filter_bookmark"
            android:visibility="gone"
            android:layout_margin="@dimen/margin_8"
            android:src="@drawable/ic_star_light"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mbBookmarkPreviewHeaderSubtitleLayoutId" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
