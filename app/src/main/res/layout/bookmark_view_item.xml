<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        style="@style/MBMaterialCardviewStyleYellow"
        android:layout_margin="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:id="@+id/bookmarkTitleTextViewId"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MBMaterialTitleStyle"
                tools:text="No Title" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/bookmarkIconImageViewId"
                    android:layout_gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_world_refresh"
                    />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bookmarkUrlTextViewId"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yantramanav_thin"
                    android:textColor="@color/colorAccentLight2"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    tools:text="www.instagram.com"
                    />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_gravity="end"
                android:id="@+id/bookmarkTimestampTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/yantramanav_thin"
                android:textSize="14sp"
                android:lines="1"
                tools:text="06 Nov"
                />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>