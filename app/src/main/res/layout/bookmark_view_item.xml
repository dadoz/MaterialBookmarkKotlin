<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        style="@style/MBMaterialCardviewStyle"
        android:layout_margin="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8">

            <TextView
                    android:id="@+id/bookmarkTitleTextViewId"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yantramanav_thin"
                    android:textColor="@color/colorPrimaryMedium"
                    tools:text="Bookmark title"
                    android:textSize="24sp" />
            <TextView
                    android:id="@+id/bookmarkTimestampTextViewId"
                    android:layout_alignBaseline="@+id/bookmarkTitleTextViewId"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/yantramanav_thin"
                    android:textSize="12sp"
                    android:lines="1"
                    tools:text="06 Nov"
                    />

        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/bookmarkIconImageViewId"
                    android:layout_gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bookmark_icon_black_26"
                    />
            <TextView
                    android:id="@+id/bookmarkUrlTextViewId"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yantramanav_thin"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    tools:text="www.instagram.com"
                    />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>