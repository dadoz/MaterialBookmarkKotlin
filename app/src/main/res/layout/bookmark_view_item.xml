<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        style="@style/MBMaterialCardviewStyleYellow"
        android:layout_margin="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:id="@+id/bookmarkTitleTextViewId"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MBMaterialTitleStyle"
                tools:text="Android developer" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bookmarkIconImageViewId"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/bookmark_icon_card_size"
                    android:layout_height="@dimen/bookmark_icon_card_size"
                    tools:src="@drawable/ic_bookmark"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bookmarkUrlTextViewId"
                    android:gravity="center_vertical"
                    android:minLines="2"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MBMaterialTextDescrSmallBrown"
                    android:ellipsize="end"
                    tools:text="www.android.com"
                    />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bookmarkTimestampTextViewId"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MBMaterialTextDescrSmallBoldBrown"
                android:lines="1"
                tools:text="06 Nov 10am"
                />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>