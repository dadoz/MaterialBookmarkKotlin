<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
                name="addBookmarkViewModel"
                type="com.application.dev.david.materialbookmarkkot.viewModels.AddBookmarkViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.application.dev.david.materialbookmarkkot.ui.views.MbBookmarkEditTitleView
                    android:id="@+id/mbNewBookmarkEditTitleViewId"
                    android:layout_toStartOf="@+id/mbNewBookmarkIconImageViewId"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mbNewBookmarkIconImageViewId"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:iconSrc="@{addBookmarkViewModel.bookmarkIconUrl}"
                    android:layout_margin="@dimen/margin_16"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mbNewBookmarkAddUpdatedTimestampLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Update: "
                    style="@style/MBMaterialTextSubtitleBrown"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mbNewBookmarkAddUpdatedTimestampId"
                    android:layout_toEndOf="@+id/mbNewBookmarkAddUpdatedTimestampLabelId"
                    android:layout_toStartOf="@+id/mbNewBookmarkAddEditButtonId"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MBMaterialTextDescrSmallBrown"
                    tools:text="this is lates update label"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mbNewBookmarkAddEditButtonId"
                    android:layout_width="@dimen/icon_filter_bookmark"
                    android:layout_height="@dimen/icon_filter_bookmark"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_pencil"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/mbNewBookmarkUrlEditLayoutId"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mbNewBookmarkUrlTextInputLayoutId"
                    style="@style/MBMaterialTextInputOutlinedPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yantramanav_thin"
                    android:hint="Search your bookmark">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mbNewBookmarkUrlEditTextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        style="@style/MBMaterialTextSubtitleThinBrown"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/mbNewBookmarkUrlCardviewId"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MBMaterialCardviewStyle"
                android:layout_marginTop="@dimen/margin_8">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mbNewBookmarkUrlTextId"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/margin_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_centerVertical="true"
                        style="@style/MBMaterialTextTitlePurple"
                        tools:text="www.googgle.it"/>
        </com.google.android.material.card.MaterialCardView>


        <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
        <RelativeLayout
                android:id="@+id/mbBookmarkSaveNewLayoutId"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/mbBookmarkSaveNewButtonId"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_centerVertical="true"
                    style="@style/MBMaterialTextDescrSmallPurple"
                    android:text="Save your bookmark"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbBookmarkSaveNewButtonId"
                    style="@style/MBMaterialButtonStylePurple"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_label_button"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbBookmarkUpdateNewButtonId"
                    style="@style/MBMaterialButtonStyleOutlinePurple"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_label_button"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/mbBookmarkUpdateNewLayoutId"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/mbBookmarkUpdateSearchNewButtonId"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_centerVertical="true"
                    style="@style/MBMaterialTextDescrSmallBrown"
                    android:text="Update your bookmark"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbBookmarkUpdateSearchNewButtonId"
                    android:layout_alignParentEnd="true"
                    style="@style/MBMaterialButtonStyleBrown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"/>

        </RelativeLayout>
    </LinearLayout>
</layout>