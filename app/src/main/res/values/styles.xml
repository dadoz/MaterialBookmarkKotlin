<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>

        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="MBMaterialCardviewStyle" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="MBMaterialCardviewStyleYellow" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorAccentLightSecondary</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialCardviewStyleBlue" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorAccentLight</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialCardviewStyleGreen" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorSuccessSecondary</item>
        <item name="strokeColor">@color/colorSuccess</item>
    </style>
    <style name="MBMaterialCardviewStyleRed" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorErrorSecondary</item>
        <item name="strokeColor">@color/colorError</item>
    </style>

</resources>
