<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>

        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="MBMaterialCardviewStyle" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="MBMaterialCardviewStyleYellow" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialCardviewStyleGreen" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorSuccessSecondary</item>
        <item name="strokeColor">@color/colorSuccess</item>
    </style>
    <style name="MBMaterialCardviewStyleRed" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="strokeColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTitleStyle" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="MBMaterialDarkTitleStyle" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="MBMaterialDarkSubtitleStyle" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorAccentLight2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MBMaterialButtonStyleBrown" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@android:color/background_light</item>
        <item name="textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialButtonStyleYellow" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="textColor">@color/colorAccentLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>

</resources>
