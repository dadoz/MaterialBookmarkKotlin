<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MBMaterialCardviewStyle" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="MBMaterialCardviewStylePurple" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialCardviewStyleFilledPurple" parent="MBMaterialCardviewStylePurple" >
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
    </style>
    <style name="MBMaterialCardviewStyleBlue" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="MBMaterialCardviewStyleGrey" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorGrey</item>
        <item name="strokeColor">@color/colorGrey</item>
    </style>

    <style name="MBMaterialCardviewStyleGreen" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorSuccess</item>
    </style>
    <style name="MBMaterialCardviewStyleRed" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTextTitleThinPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_30</item>
    </style>
    <style name="MBMaterialTextTitleThinBlue" parent="MBMaterialTextTitleThinPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextTitlePurple" parent="MBMaterialTextTitleThinPurple" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialTextTitleBlue" parent="MBMaterialTextTitlePurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MBMaterialTextHeaderPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_36</item>
    </style>
    <style name="MBMaterialTextHeaderBlue" parent="MBMaterialTextHeaderPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextHeaderThinBlue" parent="MBMaterialTextHeaderBlue" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>
    <style name="MBMaterialTextHeaderThinPurple" parent="MBMaterialTextHeaderThinBlue" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialTextHeaderBigBlue" parent="MBMaterialTextHeaderBlue" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textSize">@dimen/text_48</item>
    </style>
    <style name="MBMaterialTextHeaderBigThinPurple" parent="MBMaterialTextHeaderBigBlue" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">52sp</item>
    </style>
    <style name="MBMaterialTextHeaderBigThinWhite" parent="MBMaterialTextHeaderBigThinPurple" >
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="MBMaterialTextHeaderBigThinBlue" parent="MBMaterialTextHeaderBigThinPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="MBMaterialTextDescrSmallPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="MBMaterialTextDescrSmallBlue" parent="MBMaterialTextDescrSmallPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextDescrSmallThinBlue" parent="MBMaterialTextDescrSmallBlue" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>
    <style name="MBMaterialTextDescrSmallThinWhite" parent="MBMaterialTextDescrSmallThinBlue" >
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="MBMaterialTextDescrSmallThinPurple" parent="MBMaterialTextDescrSmallThinBlue" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialTextDescrSmallBoldBlue" parent="MBMaterialTextDescrSmallBlue" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialTextDescrSmallBoldPurple" parent="MBMaterialTextDescrSmallBoldBlue" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialTextDescrUltraSmallBoldBlue" parent="MBMaterialTextDescrSmallBoldBlue" >
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="MBMaterialTextDescrUltraSmallBlue" parent="MBMaterialTextDescrSmallBlue" >
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="MBMaterialTextDescrSmallRed" parent="MBMaterialTextDescrSmallBlue" >
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTextSubtitleBlue" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_26</item>
    </style>
    <style name="MBMaterialTextSubtitlePurple" parent="MBMaterialTextSubtitleBlue" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextSubtitleThinPurple" parent="MBMaterialTextSubtitlePurple" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialTextSubtitleThinBlue" parent="MBMaterialTextSubtitleBlue" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>
    <style name="MBMaterialTextSubtitleThinWhite" parent="MBMaterialTextSubtitleThinBlue" >
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="MBMaterialChipDescrSmallThinWhite" parent="Widget.MaterialComponents.ChipGroup" >
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textAppearance">@style/MBMaterialChipTextApparence</item>
    </style>

    <style name="MBMaterialChipDescrSmallThinPurple" parent="Widget.MaterialComponents.ChipGroup" >
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/MBMaterialChipTextApparence</item>
    </style>

    <style name="MBMaterialChipTextApparence" parent="TextAppearance.MaterialComponents.Chip" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>


    <style name="MBMaterialButtonStyleBlue" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@android:color/background_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialButtonStyleRed" parent="MBMaterialButtonStyleBlue" >
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="strokeColor">@color/colorErrorSecondary</item>
    </style>

    <style name="MBMaterialButtonStylePurple" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>

    <style name="MBMaterialButtonStyleOutlinePurple" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>


    <style name="MBMaterialTextInputOutlinedPurple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>
</resources>
