<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MBMaterialCardviewStyle" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="MBMaterialCardviewStyleViolet" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialCardviewStyleFilledViolet" parent="MBMaterialCardviewStyleViolet" >
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
    </style>
    <style name="MBMaterialCardviewStyleYellow" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialCardviewStyleGrey" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorGrey</item>
        <item name="strokeColor">@color/colorGrey</item>
    </style>

    <style name="MBMaterialCardviewStyleGreen" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorSuccess</item>
    </style>
    <style name="MBMaterialCardviewStyleRed" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTextTitleThinViolet" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_30</item>
    </style>
    <style name="MBMaterialTextTitleThinYellow" parent="MBMaterialTextTitleThinViolet" >
