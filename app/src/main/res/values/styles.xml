<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MBMaterialCardviewStyle" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="MBMaterialCardviewStylePurple" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialCardviewStyleBrown" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="MBMaterialCardviewStyleGreen" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorSuccess</item>
    </style>
    <style name="MBMaterialCardviewStyleRed" parent="MBMaterialCardviewStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTextTitleThinPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_26</item>
    </style>
    <style name="MBMaterialTextTitleThinBrown" parent="MBMaterialTextTitleThinPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextTitlePurple" parent="MBMaterialTextTitleThinPurple" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialTextTitleBrown" parent="MBMaterialTextTitlePurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MBMaterialTextHeaderPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_36</item>
    </style>
    <style name="MBMaterialTextHeaderBrown" parent="MBMaterialTextHeaderPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextHeaderThinBrown" parent="MBMaterialTextHeaderBrown" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>
    <style name="MBMaterialTextHeaderThinPurple" parent="MBMaterialTextHeaderThinBrown" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialTextHeaderBigBrown" parent="MBMaterialTextHeaderBrown" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textSize">@dimen/text_48</item>
    </style>
    <style name="MBMaterialTextHeaderBigThinPurple" parent="MBMaterialTextHeaderBigBrown" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialTextHeaderBigThinBlue" parent="MBMaterialTextHeaderBigThinPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="MBMaterialTextDescrSmallPurple" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="MBMaterialTextDescrSmallBrown" parent="MBMaterialTextDescrSmallPurple" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextDescrSmallThinBrown" parent="MBMaterialTextDescrSmallBrown" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>
    <style name="MBMaterialTextDescrSmallThinPurple" parent="MBMaterialTextDescrSmallThinBrown" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MBMaterialTextDescrSmallBoldBrown" parent="MBMaterialTextDescrSmallBrown" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
    </style>

    <style name="MBMaterialTextDescrUltraSmallBoldBrown" parent="MBMaterialTextDescrSmallBoldBrown" >
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="MBMaterialTextDescrUltraSmallBrown" parent="MBMaterialTextDescrSmallBrown" >
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="MBMaterialTextDescrSmallRed" parent="MBMaterialTextDescrSmallBrown" >
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="MBMaterialTextSubtitleBrown" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">@font/yantramanav_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>
    <style name="MBMaterialTextSubtitlePurple" parent="MBMaterialTextSubtitleBrown" >
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MBMaterialTextSubtitleThinPurple" parent="MBMaterialTextSubtitlePurple" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="MBMaterialTextSubtitleThinBrown" parent="MBMaterialTextSubtitleBrown" >
        <item name="android:fontFamily">@font/yantramanav_thin</item>
    </style>


    <style name="MBMaterialButtonStyleBrown" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@android:color/background_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>
    <style name="MBMaterialButtonStyleRed" parent="MBMaterialButtonStyleBrown" >
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="strokeColor">@color/colorErrorSecondary</item>
    </style>

    <style name="MBMaterialButtonStylePurple" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>

    <style name="MBMaterialButtonStyleOutlinePurple" parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/yantramanav_light</item>
    </style>


    <style name="MBMaterialTextInputOutlinedPurple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>
</resources>
